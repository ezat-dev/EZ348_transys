	<select id="getPlcWriteWorkData" resultType="work">
		SELECT *
		FROM t_siljuk
	</select>
	
	<update id="setPlcWriteDataUpdate" parameterType="work">
		UPDATE T_WAITLIST SET plc = '1'
		WHERE DEVICECODE = #{devicecode}
		AND LOTNO = #{lotno}
		AND PLC = '0'
	</update>
	
	<update id="setPlcWriteProc" parameterType="work">
		EXEC TRACKING_PROC00 #{devicecode}, #{pumbun}
	</update>
	
